import { supabase } from '$lib/supabase';

// Helper types para responses
type DatabaseResponse<T> = {
  data: T[];
  total: number;
  page?: number;
  limit?: number;
  has_more?: boolean;
  fil  static async listarDecisoes(
    filtros: any = {},
